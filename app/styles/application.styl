@import 'nib'
@import 'grid'

html, body
  margin 20px

/* semantic.gs make the grid fluid */
total-width=100%

/* since it's fluid, let's put a max width and center the content */
#container
  max-width: 960px
  min-height: 480px
  margin-left: auto
  margin-right: auto

.products
  column(6)
  .product
    display block
    width 100px
    height 100px
    border-radius 5px
    background #efefef
    margin-bottom 10px
    valign middle

.cart
  column(6)
  .basket
    border-radius 10px
    background #eee
    .shop_cart
      height 50px
      width: 200px
